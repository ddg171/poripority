{
  "hosting": {
    "public": ".output/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "my-blog",
          "region": "asia-northeast2"
        }
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "permissions-policy",
            "value": "interest-cohort=()"
          }
        ]
      },
      {
        "source": "**/*.@(webp|jpg|jpeg|gif|png|svg|woff|json|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=259200"
          }
        ]
      }
    ]

  }
}
